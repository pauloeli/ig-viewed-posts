{
  "manifest_version": 3,
  "name": "Instagram Viewed Posts",
  "version": "1.0.2",
  "description": "Marks Instagram posts as viewed",
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "js": [
        "bundle.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
